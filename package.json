{
  "name": "zen-server",
  "version": "0.1.0",
  "description": "A mininal HTTP server with live reload capabilities.",
  "keywords": [
    "front-end",
    "development",
    "server",
    "http",
    "cli"
  ],
  "author": "Tarek Sherif",
  "dependencies": {
    "chokidar": "^3.5.3",
    "colors": "^1.4.0",
    "connect": "^3.7.0",
    "mime": "^3.0.0",
    "morgan": "^1.10.0",
    "send": "^0.18.0",
    "serve-index": "^1.9.1",
    "ws": "^8.11.0"
  },
  "devDependencies": {
    "@types/connect": "^3.4.35",
    "@types/mime": "^3.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/send": "^0.17.1",
    "@types/serve-index": "^1.9.1",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "chokidar-cli": "^3.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.31.0",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "build": "tsc && copyfiles -f src/injected.html dist/",
    "watch": "chokidar src/* --initial -c \"npm run build\"",
    "watch-poll": "chokidar src/* --initial -p -c \"npm run build\"",
    "lint": "eslint src/*.ts"
  },
  "main": "./dist/zen-server.js",
  "bin": {
    "zen-server": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tsherif/zen-server"
  },
  "license": "MIT"
}
